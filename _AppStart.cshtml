@{
    // _AppStart.cshtml is typically in the site root.
    // _AppStart.cshtml is for code to execute before the site starts.
    // _AppStart.cshtml is for global values like counters and global names.
    // Files with an underscore prefix cannot be browsed directly.
    // _
    WebMail.SmtpServer = "mailserver.example.com";
    WebMail.EnableSsl = true;
    WebMail.UserName = "username@example.com";
    WebMail.Password = "your-password";
    WebMail.From = "your-name-here@example.com";
}